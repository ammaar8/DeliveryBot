<launch>
   <!-- Arguments -->
   <arg name="cmd_vel_topic" default="/dbot/cmd_vel" />
   <arg name="odom_topic" default="/dbot/odom" />
   <arg name="move_forward_only" default="false" />

   <!-- move base -->

   <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
      <param name="base_global_planner" value="global_planner/GlobalPlanner" />
      <rosparam file="$(find deliverybot_nav)/param/costmap_common_params.yaml" command="load" ns="global_costmap"/>
      <rosparam file="$(find deliverybot_nav)/param/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find deliverybot_nav)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find deliverybot_nav)/param/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find deliverybot_nav)/param/move_base_params.yaml" command="load" />
      <rosparam file="$(find deliverybot_nav)/param/dwa_local_planner_params.yaml" command="load" />
      <rosparam file="$(find deliverybot_nav)/param/global_planner_params.yaml" command="load" />

      <remap from="cmd_vel" to="$(arg cmd_vel_topic)" />
      <remap from="odom" to="$(arg odom_topic)" />

      <param name="DWAPlannerROS/mix_vel_x" value="0.0" if="$(arg move_forward_only)" />
   </node>

</launch>
